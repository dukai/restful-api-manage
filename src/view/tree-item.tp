<li :class="{active: open}">
  <a 
    :class="{bold: isFolder, active: open, selected: selected}"
    @click="selected=!selected"
    @dblclick="changeType">
    <i 
      v-if="isFolder" 
      @click.stop="toggle"
      class="glyphicon {{open ? 'glyphicon-menu-up' : 'glyphicon-menu-down'}}">
      </i>
    {{model.name}}

    <span @click="_addChild" class="pull-right">+</span>
  </a>
  <ul v-show="open" v-if="isFolder" class="list">
    <item
      class="item"
      v-for="model in model.children"
      :model="model">
    </item>
  </ul>
</li>
